/*******************************
         Site Overrides
*******************************/

.ui.search {
  width: fit-content;
}

.ui.fluid.search {
  width: 100%;
}

.ui.fluid.search > .input {
  width: 100%;
}

.ui.search.focus > .input > input {
  box-shadow: @promptActiveBoxShadow;
}

.ui.search > .disabled.input {
  opacity: @disabledOpacity;
}

.ui.search > .disabled.input > input {
  background-color: @disabledBackgroundColor;
  color: @disabledColor;
}